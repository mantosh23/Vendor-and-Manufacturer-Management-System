<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Take Attendance</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f0f2f5; font-family: 'Segoe UI', sans-serif; }
    .container { margin-top: 3rem; }
    .card { box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
    .navbar {
            background-color: #007bff;
        }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark ">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">VendoMan</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/vendor_dashboard">
                  <i class="fa fa-tachometer-alt"></i> Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">
                  <i class="fa fa-sign-out-alt"></i> Logout
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
  <div class="container">
    <h2 class="text-center mb-4">Take Attendance</h2>
    <form action="/vendor/employees/attendance" method="POST">
      <div class="row g-3">
        <% employees.forEach(emp => { %>
          <div class="col-md-4">
            <div class="card p-3">
              <h5><%= emp.name %></h5>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="emp_<%= emp.id %>" value="Present" id="present_<%= emp.id %>" checked>
                <label class="form-check-label" for="present_<%= emp.id %>">Present</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="emp_<%= emp.id %>" value="Absent" id="absent_<%= emp.id %>">
                <label class="form-check-label" for="absent_<%= emp.id %>">Absent</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="emp_<%= emp.id %>" value="Leave" id="leave_<%= emp.id %>">
                <label class="form-check-label" for="leave_<%= emp.id %>">Leave</label>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">Submit Attendance</button>
      </div>
    </form>
  </div>
  <%- include("../includes/footer.ejs") %>
</body>
</html>
